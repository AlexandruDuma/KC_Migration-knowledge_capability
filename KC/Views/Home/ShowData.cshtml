@{
    ViewBag.Title = "Data";
    ViewBag.JSPage = "showdata.js";
}

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-container ">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title" id="shd_title"></h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-wrapper kt-form">
                <a id="shd_href" href="" class="btn btn-success btn-bold btn-upper btn-font-sm">
                    <i class="flaticon-plus"></i>
                    New
                </a>
                &nbsp;
                <div class="dropdown dropdown-inline" id="showDataActions" style="display:none">
                    <button type="button" class="btn btn-success btn-bold btn-upper btn-font-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="flaticon-menu-2"></i> Actions
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <ul class="kt-nav">
                            <li class="kt-nav__section kt-nav__section--first">
                                <span class="kt-nav__section-text">Initiative Creation</span>
                            </li>
                            <li class="kt-nav__item">
                                <a href="#" class="kt-nav__link" id="actionsAllowKIPCreation">
                                    <i class="kt-nav__link-icon flaticon-like"></i>
                                    <span class="kt-nav__link-text">Allow</span>
                                </a>
                            </li>
                            <li class="kt-nav__item">
                                <a href="#" class="kt-nav__link" id="actionsDontAllowKIPCreation">
                                    <i class="kt-nav__link-icon flaticon-close"></i>
                                    <span class="kt-nav__link-text">Don't allow</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="kt-container  kt-grid__item kt-grid__item--fluid">
    <div class="row">
        <div class="col-lg-12 col-xl-12 order-lg-1 order-xl-1">
            <div class="kt-portlet__body" id="formLoading">
                <div class="kt-section">
                    <div class="d-flex justify-content-center">
                        <div class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet kt-portlet--height-fluid" id="mainRegion" style="display:none">
                <div class="kt-portlet__body">
                    <table class="table table-striped- table-bordered table-hover table-checkable" id="dataTable">
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>	